<!-- views/encounters/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Edit Encounter <%= encounter.encounterName %></title>
</head>
<body>
    <h1> Edit Encounter <%= encounter.encounterName %></h1>
    <form action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/encounters/<%= encounter._id %>?_method=PUT" method = "POST">
        <label for="encounterName">Encounter Name:</label>
        <input type="text" name="encounterName" id="encounterName" value="<%= encounter.encounterName %>" />
        <label for="encounterDetails">Encounter Details:</label>
        <textarea name="encounterDetails" value="<%= encounter.encounterDetails %>"></textarea>
        <button type="submit">Update Encounter <%= encounter.encounterName %> !</button>
    </form>
    <%- include('../partials/_navbar.ejs') %> 
</body>
</html>