<!-- views/notes/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/sessionNotes/edit.css" />
    <title>Edit Session <%= sessionNote.sessionNumber %> Notes</title>
</head>
<%- include('../partials/_navbar.ejs') %> 
<body class="edit-body">
    <div class="edit-container">
        <h1 class="header"> Edit Session <%= sessionNote.sessionNumber %> Notes</h1>
        <form action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/<%= sessionNote._id %>?_method=PUT" method = "POST" class="form">
            <div class="edit-grid">
                <div class="edit-box">
                    <label for="sessionNumber">Session Number:</label>
                    <input type="text" name="sessionNumber" id="sessionNumber" value="<%=sessionNote.sessionNumber%>" />
                    <label for="sessionDetails">Session Notes:</label>
                    <textarea name="sessionDetails"><%= sessionNote.sessionDetails %></textarea>
                    <div class="submit-container">
                        <button type="submit" class="submitbtn">Update Session <%= sessionNote.sessionNumber %> !</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>