<!-- views/notes/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Edit Session <%= sessionNote.sessionNumber %> Notes</title>
</head>
<body>
    <h1> Edit Session <%= sessionNote.sessionNumber %> Notes</h1>
    <form action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/<%= sessionNote._id %>?_method=PUT" method = "POST">
        <label for="sessionNumber">Session Number:</label>
        <input type="text" name="sessionNumber" id="sessionNumber" value="<%=sessionNote.sessionNumber%>" />
        <label for="sessionDetails">Session Notes:</label>
        <textarea name="sessionDetails" value="<%= sessionNote.sessionDetails %>"></textarea>
        <button type="submit">Update Session <%= sessionNote.sessionNumber %> !</button>
    </form>
    <%- include('../partials/_navbar.ejs') %> 
</body>
</html>