<!-- views/campaigns/show.ejs-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= campaign.campaignName %>
    </title>
</head>

<body>
    <h1>
        <%= campaign.campaignName %>
    </h1>
    <div>
        <h2>Players</h2>
        <ul>
            <% if (campaign.players.length> 0) { %>
                <% campaign.players.forEach((player)=> { %>
                    <li>
                        <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/players/<%= player._id %>"><%= player.playerName %> (<%= player.playerType %>)</a>
                    </li>
                     <form
                        action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/players/<%= player._id %>?_method=DELETE"
                        method="POST" style="display:inline">
                        <button type="submit">Delete Player</button>
                    </form>
                    <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/players/<%= player._id %>/edit">Edit</a>
                    <% }) %>
                        <% } else { %>
                            <li>No Players added yet</li>
                            <% } %> <br>
                                <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/players/new">Add New Player</a>
        </ul>
    </div>
    <div>
        <h2>Encounters</h2>
        <ul>
            <% if (campaign.encounters.length> 0) { %>
                <% campaign.encounters.forEach((encounters)=> { %>
                    <li><a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/encounters/<%= encounters._id %>">
                            <%= encounters.encounterName %> Encounter</a></li>
                    <form
                        action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/encounters/<%= encounters._id %>?_method=DELETE"
                        method="POST" style="display:inline">
                        <button type="submit">Delete Encounter</button>
                    </form>
                    <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/encounters/<%= encounters._id %>/edit">Edit</a>
                    <% }) %>
                        <% } else { %>
                            <li>No Encounters added yet</li>
                            <% } %> <br>
                                <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/encounters/new">Add New Encounter</a>
        </ul>
    </div>
    <div>
        <h2>Session Notes</h2>
        <ul>
            <% if (campaign.sessionNotes.length> 0) { %>
                <% campaign.sessionNotes.forEach((sessionNote)=> { %>
                    <li><a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/<%= sessionNote._id %>">Session
                            <%= sessionNote.sessionNumber %></a></li>
                    <form
                        action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/<%= sessionNote._id %>?_method=DELETE"
                        method="POST" style="display:inline">
                        <button type="submit">Delete</button>
                    </form>
                    <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/<%= sessionNote._id %>/edit">Edit</a>
                    <% }) %>
                        <% } else { %>
                            <li>No session notes added yet</li>
                            <% } %> <br>
                                <a href="/users/<%= user._id %>/campaigns/<%= campaign._id %>/notes/new">Add Session
                                    Note</a>
        </ul>
    </div>
    <form action="/users/<%= user._id %>/campaigns/<%= campaign._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete <%= campaign.campaignName %> Campaign</button>
    </form>
    <%- include('../partials/_navbar.ejs') %>
</body>

</html>