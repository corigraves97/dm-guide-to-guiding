<!-- views/players/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/players/edit.css" />
    <title>Edit <%= player.playerName %></title>
</head>
<body class="edit-player-body">
    <div class="edit-player-container">
        <h1 class="header">Edit <%= player.playerName %></h1>
        <form action="/users/<%= user._id %>/campaigns/<%= campaign._id %>/players/<%= player._id %>?_method=PUT" method = "POST" class="edit-form">
            <div class="edit-form-grid">
                <div class="edit-form-box">
                    <label for="playerType">Player Type:</label>
                    <select id="playerType" name="playerType">
                        <option value="PC">PC</option>
                        <option value="NPC">NPC</option>
                    </select>
                    <label for="playerName">Player Name:</label>
                    <input type="text" name="playerName" id="playerName" value="<%= player.playerName %>"/>
                    <label for="playerRace">Player Race</label>
                    <input type="text" name="playerRace" id="playerRace" value="<%= player.playerRace %>"/>
                    <label for= "playerClass">Player Class</label>
                    <input type="text" name="playerClass" id="playerClass" value="<%= player.playerClass %>"/>
                    <label for="playerSubclass">Player Subclass</label>
                    <input type="text" name="playerSubclass" id="playerSubclass" value="<%= player.playerSubclass %>"/>
                    <label for="playerHP">Hit Points</label>
                    <input type="text" name="playerHP" id="playerHP" />
                    <label for="playerNotes">Notes</label>
                    <textarea name="playerNotes" id="playerNotes"></textarea>
                </div>
            </div>
            <div class="submit-container">
                <button type="submit" class="submitbtn">Update <%= player.playerName %></button>
            </div>
        </form>
    </div>
    <%- include('../partials/_navbar.ejs') %> 
</body>
</html>